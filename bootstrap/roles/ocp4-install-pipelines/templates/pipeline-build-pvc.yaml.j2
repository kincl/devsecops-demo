apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: petclinic-build-workspace
  namespace: cicd
spec:
  resources:
    requests:
      storage: 5Gi
  volumeMode: Filesystem
  accessModes:
    - ReadWriteOnce
  persistentVolumeReclaimPolicy: Retain
{% if pvc_storage_class != "default" %}
  storageClassName: {{ pvc_storage_class }}
{% endif %}
